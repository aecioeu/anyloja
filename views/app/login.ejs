<%- include('partials/header', {back : 'true' , header :"Entrar na loja" ,
title: '' , description: ''}) -%>

<div class="page-content-wrapper">
  <!-- Top Products-->
  <div class="top-products-area py-3">
    <div class="container">
      <div class="container">
        <!-- Notifications Area-->
        <div class="notification-area pt-3 pb-2">
          <h6 class="pl-2">Entre com seus dados</h6>

          <%if(error == "true"){%>
          <div
            class="alert alert-warning alert-dismissible fade show"
            role="alert"
          >
            Dados Incorretos
            <button
              type="button"
              class="close"
              data-dismiss="alert"
              aria-label="Close"
            >
              <span aria-hidden="true">Ã—</span>
            </button>
          </div>
          <%}%>

          <form
            action="/catalogo/login"
            method="POST"
            class="authentication-form"
          >
            <div class="form-group">
              <label class="form-control-label">Email</label>
              <div class="input-group input-group-merge">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="icon-dual" data-feather="mail"></i>
                  </span>
                </div>
                <input
                  type="text"
                  class="form-control"
                  id="user"
                  name="user"
                  placeholder="login"
                />
              </div>
            </div>

            <div class="form-group mt-2">
              <label class="form-control-label">Senha</label>

              <div class="input-group input-group-merge">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="icon-dual" data-feather="lock"></i>
                  </span>
                </div>
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  placeholder="Sua Senha"
                />
              </div>
            </div>

            <div class="form-group mb-0 text-center mt-2">
              <button class="btn btn-success btn-lg w-100 mt-2" type="submit">
                Acessar Catalogo
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer')-%>
