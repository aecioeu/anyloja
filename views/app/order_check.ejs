<%-include('partials/header', {back : false, title: 'Seu Pedido' , description: 'Confira seu pedido.'})-%>
    <%- include('partials/menu') -%>
        <style>
            .avatar {
                height: 4rem;
                width: 4rem;
            }
            
            .mr-3,
            .mx-3 {
                margin-right: 1rem !important;
            }
            
            .rounded-circle {
                border-radius: 50% !important;
            }
            
            img {
                vertical-align: middle;
                border-style: none;
            }
            
            .media {
                display: -webkit-box;
                display: -ms-flexbox;
                display: flex;
                -webkit-box-align: start;
                -ms-flex-align: start;
                align-items: flex-start;
            }
            
            .media-body {
                -webkit-box-flex: 1;
                -ms-flex: 1;
                flex: 1;
            }
            
            .float-right {
                float: right !important;
            }
            
            .align-self-center {
                -ms-flex-item-align: center !important;
                align-self: center !important;
            }
        </style>
        <div class="page-content-wrapper">
            <div class="container">

                <!-- Cart Wrapper-->
                <div class="cart-wrapper-area py-3">
                    <h6 class="mt-1">Seu Pedido
                        <%-`#${order.order_cod}`%>
                    </h6>
                    <div class="cart-table card mb-3">
                        <div class="table-responsive card-body">

                            <h6 class="header-title mb-2">Cliente</h6>
                            <%if(order.name){%>

                                <h6 class="font-weight-normal font-size-16">
                                    <%-order.name%><br>
                                        <%-order.phone%>
                                </h6>

                                <%}else{%>
                                    <h6 class="font-weight-normal font-size-15">
                                        Cliente não foi informado
                                    </h6>

                                    <%}%>

                                        <h6 class="header-title mb-2">Vendedor</h6>
                                        <h6 class="font-weight-normal font-size-15">
                                            <%-order.seller_name%>
                                        </h6>

                                        <h6 class="header-title mb-4">Produtos</h6>


                                        <%if(products.length >0){%>



                                            <% products.forEach((product, index) => { %>

                                                <div class="media mt-3">
                                                    <%if(product.media.length >0){%>

                                                        <% product.media.forEach((image, index) => { %>

                                                            <img src="/media/<%=store.folder%>/<%=image.name%>" class="mr-3 avatar rounded-circle" alt="imagem do produto">

                                                            <% }) %>




                                                                <%}else{%>
                                                                    <!-- <div class="cell-img" style="border-radius: 50px;height: 60px;width: 60px;background-image: url('/media/no-pic.jpg')">
                                                    </div>-->

                                                                    <img src="/media/no-pic.jpg" class="mr-3 avatar rounded-circle" alt="shreyu">

                                                                    <%}%>

                                                                        <div class="media-body">
                                                                            <div class="align-self-center float-right">
                                                                                <rs>R$</rs>
                                                                                <%-(product.qnt*product.price)%>
                                                                            </div>
                                                                            <h6 class="mt-0 mb-0 font-size-15 font-weight-normal">
                                                                                <span class="font-weight-bold">
                            <%-product.name%>


                        </span>
                                                                                <%if(product.variations){%>
                                                                                    <%-`<span style="font-size:12px;display:block">${product.variations}</span>`%>
                                                                                        <% } %>
                                                                            </h6>
                                                                            <p class="text-muted">
                                                                                <%-product.qnt%> x
                                                                                    <rs>R$</rs>
                                                                                    <%-product.price%>
                                                                            </p>
                                                                        </div>
                                                </div>


                                                <% }) %>
                                                    <%}else{%>
                                                        <div class="col-md-12">
                                                            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                                                Não há produtos
                                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                                                            </div>
                                                        </div>
                                                        <%}%>


                        </div>
                    </div>
                    <!-- Coupon Area-->
                    <div class="card coupon-card mb-3 min-order-card" style="display: none;">
                        <div class="card-body">
                            <div class="apply-coupon">
                                <h6 class="mb-0">Compra Minima</h6>
                                <p class="mb-2">O minimo do seu pedido é <span class="min-order"></p>

                    </div>
                </div>
            </div>
            <!-- Cart Amount Area-->
            <div class="card cart-amount-area">
                <div class="card-body  align-items-center justify-content-between">
                    <span class=" mb-0 mr-1">TOTAL DO PEDIDO </span>
                                    <h5 class="total-pric">
                                        <rs>R$</rs>
                                        <%-`${order.total}`%>
                                    </h5>


                            </div>


                        </div>

                        <p class="mt-3" style="margin: 15px; font-size: 12px;">☝️ Qualquer divergencia Favor entrar em contato com o vendedor.
                        </p>
                    </div>
                </div>
            </div>

            <%- include('partials/footer')-%>