<%-include('../partial/header')%>
<div class="content">
  <!-- Start Content-->
  <div class="container-fluid">
    <div class="row page-title">
      <div class="col-md-12">
        <h4 class="mb-1 mt-0">Cadastro de Clientes</h4>
      </div>
    </div>

    <div class="row">
      <div class="col-12 col-xl-8">
        <div class="card">
          <div class="card-body">
            <form
              id="product"
              method="post"
              action="/loja/clients"
              class="needs-validation form-horizontal"
              novalidate
            >
              <div class="row">
                <div class="col-xl-6 col-sm-4">
                  <div class="form-group">
                    <label for="simpleinput">Nome do Cliente</label>
                    <input
                      type="text"
                      class="form-control"
                      id="simpleinput"
                      name="name"
                      value=""
                      placeholder="Nome do Cliente"
                      required
                    />
                  </div>
                </div>
                <div class="col-xl-6 col-sm-4">
                  <div class="form-group">
                    <label for="simpleinput">Login</label>
                    <input
                      type="text"
                      class="form-control"
                      id="simpleinput"
                      name="user"
                      value=""
                      placeholder="Login"
                      required
                    />
                  </div>
                </div>
                <div class="col-xl-6 col-sm-4">
                  <div class="form-group">
                    <label for="simpleinput">Senha</label>
                    <input
                      type="text"
                      class="form-control"
                      id="simpleinput"
                      name="password"
                      value=""
                      placeholder="Senha"
                      required
                    />
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-xl-6 col-sm-6">
                  <button type="submit" class="form-control btn btn-success">
                    Criar
                  </button>
                </div>
              </div>
            </form>
          </div>
          <!-- end card-body -->
        </div>
        <!-- end card-->
      </div>
      <!-- end col -->
    </div>
    <!-- end row -->

    <%if(clients.length>0){%>
    <div class="row">
      <div class="col-12 col-xl-8">
        <div class="card">
          <div class="card-body">
            <table
              id="basic-datatable"
              class="table table-striped dt-responsive nowrap"
            >
              <thead>
                <tr>
                  <th>Cliente</th>
                  <th>Login</th>
                  <th>Senha</th>
                  <th>Ação</th>
                </tr>
              </thead>

              <tbody>
                <% clients.forEach((client, index)=> { %>

                <tr id="<%=client.id%>">
                  <td><%=client.name%></td>
                  <td><%=client.user%></td>
                  <td><%=client.password%></td>
                  <td>
                    <div
                      class="badge badge-danger deleteSeller"
                      onclick="deleteclient('<%=client.id%>')"
                    >
                      APAGAR
                    </div>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <!-- end card body-->
        </div>
        <!-- end card -->
      </div>
      <!-- end col-->
    </div>
    <%}else{%>
    <div class="col-xl-6 col-lg-6">
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        Cadastre clientes para terem acesso a seu catálogo e começar a receber
        pedidos.
        <button
          id="copyTarget"
          type="button"
          class="close"
          data-dismiss="alert"
          aria-label="Close"
        >
          <span aria-hidden="true">×</span>
        </button>
      </div>
    </div>
    <%}%>
  </div>
  <!-- container-fluid -->
</div>
<style>
  .dropzone {
    zoom: 0.8;
  }
</style>

<%-include('../partial/footer')%>
