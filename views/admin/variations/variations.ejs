<%-include('../partial/header')%>
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row page-title">
                <div class="col-xl-6 col-sm-6 mb-3">
                    <a href="/loja/variations/create" class="form-control btn btn-success">Adicionar
                    Variação do Produto</a>
                </div>

                <div class="col-md-12">
                    <h4 class="mt-1 mb-2">Variações de Produto</h4>
                </div>
            </div>


            <div class="row">
                <%if(tags_title.length >0){%>

                    <% tags_title.forEach((tag_title, index) => { %>


                        <div class="col-12 col-xl-3 col-md-4 col-sm-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="dropdown float-right">
                                        <a href="#" class="dropdown-toggle text-muted arrow-none" data-toggle="dropdown" aria-expanded="false" draggable="false">
                                            <i class="uil uil-ellipsis-v font-size-14"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(16px, 19px, 0px);">
                                            <!-- item-->
                                            <a href="/loja/variations/editor/<%=tag_title.id %>" class="dropdown-item" draggable="false"><i class="uil uil-edit-alt mr-2"></i>Editar Variação de
                                    <strong><%=tag_title.name %></strong></a>

                                        </div>
                                    </div>
                                    <div class="media">
                                        <div class="media-body">

                                            <h5 class="mt-0 mb-0">
                                                <%=tag_title.name %>
                                                    <%-((tag_title.active==1 ) ? '<span class="badge badge-soft-success p-1 font-12">ATIVO</span>': '<span class="badge badge-soft-primary p-1 font-12">INATIVO</span>' ) %>
                                                        <%-((tag_title.required==1 ) ? '<span class="badge badge-soft-danger p-1 font-12">OBRIGATORIO</span>': '' ) %>

                                            </h5>






                                            <%if(tag_title.tags.length >0){%>
                                                <div class="mb-2 mt-2 ml-3 pl-3" style="
                                                       border-left: 2px dashed #e2e7f1 !important;
                                                ">

                                                    <% tag_title.tags.forEach((tag, index) => { %>
                                                        <span class="badge badge-soft-secondary p-1 mb-1"> <%=tag.name %></span>

                                                        <%})%>
                                                </div>
                                                <%}%>




                                                    <a href="/loja/variations/<%=tag_title.id %>/tags" class="btn
                                btn-primary
                                btn-sm btn-block mr-1 mt-2">Gerenciar Opções</a>


                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <% }) %>
                            <%}else{%>
                                <div class="col-md-6">
                                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                        Cadastre um Variação para começar a adicionar opções.
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                                    </div>
                                </div>
                                <%}%>


            </div>


        </div>
        <!-- container-fluid -->

    </div>

    

    <style>
        .media {
            display: contents !important;
        }
    </style>
    <%-include('../partial/footer')%>