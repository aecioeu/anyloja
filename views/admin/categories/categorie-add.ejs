<%-include('../partial/header')%>
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">
            <div class="row page-title">
                <div class="col-md-12">

                    <h4 class="mb-1 mt-0">Categorias</h4>

                </div>
            </div>




            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">


                            <form class="form-horizontal" method="POST" action="/loja/categories/create">

                                <input type="hidden" name="icon" class="icon" value="help">
                                <input type="hidden" name="id">

                                <div class="row">
                                    <div class="col-xl-2 col-sm-4 col-6"> <label for="simpleinput">&nbsp;</label>
                                        <div class="custom-control custom-switch mb-2">
                                            <input type="checkbox" class="custom-control-input" id="customSwitch1" checked>
                                            <label class="custom-control-label" for="customSwitch1">Mostrar
                                            Categoria</label>
                                        </div>
                                    </div>




                                    <div class="col-xl-4 col-sm-4">
                                        <div class="form-group mt-3 mt-sm-0">
                                            <label for="simpleinput">Categoria</label>
                                            <input type="text" class="form-control" id="simpleinput" name="name" value="" placeholder="Nome da Categoria">

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xl-4 col-sm-4">
                                        <button type="submit" class="form-control btn btn-success">Salvar</button>

                                    </div>
                                </div>



                            </form>

                        </div>
                        <!-- end card-body -->
                    </div>
                    <!-- end card-->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->




        </div>
        <!-- container-fluid -->

    </div>

    <!-- sample modal content -->
    <div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="myModalLabel">Escolha um icone</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body icons-show">
                </div>

            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->


    <%-include('../partial/footer')%>